extends layout

block content
  .ui.large.top.fixed.hidden.menu.inverted
    .sidebar
    .ui.container.nav(style="height: 65px")
      a.item(href="/")
        img.ui.tiny.image(src='/images/melody-logo.png')
      a.item(href="/movies") Movies
      a.item(href="/series") Series
      a.item(href="/music") Music
      a.item(href="/plays") Plays
      a.item Classics
      a.item Collections
      a.item(href="/live") Live TV
      .ui.category.search.item.nav-search
        .ui.transparent.icon.input
          input.prompt(type='text', placeholder='Search...')
          i.search.link.icon
        .results



      .right.menu
        .ui.left.dropdown.item(id="account-dropdown")
          i.setting.icon
          .menu
            a.item
              i.user.icon
              span.text My Account
            a.item
              i.list.layout.icon
              span.text Watchlist
            a.item
              i.flag.icon
              span.text Arabic

  .ui.right.vertical.sidebar.menu(id="nav-sidebar")
    a.item(href="/") Home
    a.item(href="/movies") Movies
    a.item(href="/series") Series
    a.item(href="/music") Music
    a.item(href="/plays") Plays
    a.item Classics
    a.item Collections
    a.item(href="/live") Live TV
    .ui.category.search.item
      .ui.transparent.icon.input
        input.prompt(type='text', placeholder='Search...')
        i.search.link.icon
      .results
    a.item.horizontal.divider
    a.item
      h6
        | My Account
    a.item
      h6
        | Watchlist
    a.sidebar.item
      h6
        | Arabic

  .ui.inverted.vertical.masthead.center.aligned
    .ui.container.nav-header.pad-bottom-tiny
      .ui.large.secondary.inverted.pointing.menu
        a.toc.item.right.aligned
          i.sidebar.icon


  .ui.vertical.center.container.aligned.grids.pad-top-medium#movie-details(data-id='#{data.id}')

  .ui.vertical.center.container.details.grids
      .ui.one.column.grid.container
        .column.header
          h4.ui.header.grid-title
            br
            | Similar Titles >

      .ui.equal.width.grid.container.bottom-padding
        .row
          a.image.preview
            .image.preview
